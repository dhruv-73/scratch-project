 <%- include('./partials/header') %> 
  <div class="w-full min-h-screen bg-zinc-200">
        <% if(error.length >0) { %>
            <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 bg-red-500 font-semibold rounded-md p-3">
                <span class="mt-1 mb-1 text-white inline-block"><%=error%></span>
            </div>
        <%}%>

        <div class="flex items-center justify-center w-full h-[90vh] gap-30">
            <div class="">
                <h1 class="text-4xl">welcome to <span class="text-blue-500 font-bold">Scratch</span></h1>
                <p class="text-xl mb-5">create your account</p>
                <form action="/users/register" method="post">
                    <input type="text" name="fullname" placeholder="FullName" class="block bg-zinc-300 px-3 py-2 outline-none rounded-md w-[500px] mb-3">
                    <input type="email" name="email" placeholder="Email" class="block bg-zinc-300 px-3 py-2 outline-none rounded-md w-[500px] mb-3">
                    <input type="password" name="password" placeholder="Password" class="block bg-zinc-300 px-3 py-2 outline-none rounded-md w-[500px] mb-3">
                    <input type="submit" value="Create My Account" class="bg-blue-500 px-3 py-2 w-[170px] rounded-full text-white font-semibold">
                </form>
            </div>
            <div class="mb-5">
                <p class="font-semibold text-2xl mb-5">Login your account</p>
                <form action="/users/login" method="post">
                    <input type="text" name="email" placeholder="Email" class="block bg-zinc-300 px-3 py-2 outline-none rounded-md w-[500px] mb-3">
                    <input type="password" name="password" placeholder="Password" class="block bg-zinc-300 px-3 py-2 outline-none rounded-md w-[500px] mb-3">
                    <input type="submit" value="Login" class="bg-blue-500 px-3 py-2 w-[100px] rounded-full text-white font-semibold">
                </form>
         </div>
        </div>
    </div>
<%- include('./partials/footer') %> 

